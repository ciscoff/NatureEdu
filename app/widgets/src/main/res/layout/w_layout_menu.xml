<?xml version="1.0" encoding="utf-8"?>
<dev.barabu.widgets.menu.MenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/w_menu"
    android:layout_width="@dimen/w_menu_width"
    android:layout_height="wrap_content"
    android:background="@drawable/w_shape_menu_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/w_menu_padding">

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/w_menu_button_blur"
            style="@style/style_menu_button_item"
            android:contentDescription="@null"
            android:src="@drawable/w_ic_blur_1" />

        <ImageView
            android:id="@+id/w_menu_button_invert"
            style="@style/style_menu_button_item"
            android:contentDescription="@null"
            android:src="@drawable/w_ic_invert_1" />

        <ImageView
            android:id="@+id/w_menu_button_gray"
            style="@style/style_menu_button_item"
            android:contentDescription="@null"
            android:src="@drawable/w_ic_grey_1" />

        <ImageView
            android:id="@+id/w_menu_button_colored"
            style="@style/style_menu_button_item"
            android:contentDescription="@null"
            android:src="@drawable/w_ic_colored_1" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_menu_spacer_height"
            android:layout_marginHorizontal="@dimen/w_menu_spacer_margin_hor"
            android:layout_marginVertical="@dimen/w_menu_spacer_margin_ver"
            android:background="@drawable/w_shape_separator" />

    </LinearLayout>

    <ImageView
        android:id="@+id/w_menu_button_main"
        style="@style/style_menu_button_main"
        android:contentDescription="@null"
        android:src="@drawable/w_ic_camera_swap" />

</dev.barabu.widgets.menu.MenuView>